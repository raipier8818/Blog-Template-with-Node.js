ol.post_list(style='grid-template-rows: repeat(10,1fr);')
  -var length = Object.keys(postListObj)
  -for(var i = 0; i < Object.keys(postListObj).length; i++)
    -var postKey = Object.keys(postListObj)[i]
    -var url = `post?id=` + postListObj[postKey].id;

      a(href=url) 
        li.post      
          .category #{postListObj[postKey].category}
          .post_title #{postListObj[postKey].title}
          .time #{postListObj[postKey].date}

